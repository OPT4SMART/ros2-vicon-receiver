{
    "name": "Vicon ROS 2 Jazzy Dev",
    "dockerComposeFile": "compose.yaml",
    "service": "dev",
    "workspaceFolder": "/home/ubuntu/ros2_ws",
    "remoteUser": "ubuntu",
    "overrideCommand": true,
    "shutdownAction": "stopCompose",
    "customizations": {
        "vscode": {
            "extensions": [
                "ranch-hand-robotics.rde-ros-2",
                "ranch-hand-robotics.urdf-editor",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cmake-tools",
                "redhat.vscode-yaml",
                "redhat.vscode-xml",
                "eamodio.gitlens",
                "ms-python.python",
                "github.copilot",
                "github.copilot-chat"
            ],
            "settings": {
                "C_Cpp.default.compileCommands": [
                    "${workspaceFolder}/ros2_ws/build/compile_commands.json"
                ]
            }
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder}/vicon_receiver,target=/home/ubuntu/ros2_ws/src/ros2-vicon-receiver,type=bind"
    ],
    "initializeCommand": "xhost +si:localuser:$(whoami) || true",
    "onCreateCommand": "bash -lc 'set -euo pipefail; cd /home/ubuntu/ros2_ws; source /home/ubuntu/.bashrc; rosdep update; rosdep install --from-paths src --rosdistro $ROS_DISTRO -y --ignore-src; python3 -m colcon build --symlink-install --cmake-args -DCMAKE_BUILD_TYPE=Release -DCMAKE_EXPORT_COMPILE_COMMANDS=ON'; ln -s ./build/compile_commands.json compile_commands.json"
}
